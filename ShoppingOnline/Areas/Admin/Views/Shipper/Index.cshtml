@using Microsoft.AspNetCore.Authorization
@using ShoppingOnline.WebApplication.Authorization
@inject IAuthorizationService AuthorizationService


@{
    ViewData["Title"] = "Shipper";
}
@section Scripts{

    <script src="~/app/controllers/shipper/index.js" asp-append-version="true"></script>
    <script>
        var shipperObj = new ShipperController();
        shipperObj.initialize();
    </script>
}
@section Styles{

}

<input type="hidden" id="hid-category-id" value="0" />
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Shipper</h3>
        </div>

        <div class="title_right">

            <div class="col-md-5 col-sm-5 col-xs-12 form- group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control" placeholder="Keyword...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">Search!</button>
                    </span>
                </div>
            </div>
            @if ((await AuthorizationService.AuthorizeAsync(User, "SHIPPER", Operations.Create)).Succeeded)
            {
                <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right">
                    <button class="btn btn-success" id="btn-create" type="button"><i aria-hidden="true" class="fa fa-plus"></i></button>
                </div>
            }
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="tbl-product" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="8%"></th>
                                    <th>Name</th>
                                    <th>CompanyName</th>
                                    <th>Phone</th>
                                    <th>CreatedDate</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody id="tbl-content"></tbody>
                        </table>

                        <div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                    <select id="ddl-show-page">
                                        <option value="10" selected="selected">10</option>
                                        <option value="20">20</option>
                                        <option value="30">30</option>
                                        <option value="50">50</option>
                                    </select>
                                    <span class="item-per-page">
                                        records/page.
                                    </span>
                                    Total record count: <strong id="lbl-total-records"></strong>
                                </div>
                            </div><div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                    <ul id="paginationUL"></ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <script id="table-template" type="x-tmpl-mustache">
            <tr>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(User, "SHIPPER", Operations.Update)).Succeeded)
                    {
                        <a href="#" data-id="{{Id}}" class="btn-xs btn btn-danger btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                    }
                    @if ((await AuthorizationService.AuthorizeAsync(User, "SHIPPER", Operations.Delete)).Succeeded)
                    {
                        <a href="#" data-id="{{Id}}" class="btn-xs btn btn-success btn-delete"><i class="fa fa-trash-o"></i></a>
                    }
                </td>
                <td>{{Name}}</td>
                <td>{{CompanyName}}</td>
                <td>{{Phone}}</td>
                <td>{{{CreatedDate}}}</td>
                <td>{{{Status}}}</td>               
            </tr>
        </script>
    </div>
</div>
@Html.Partial("_AddEditModal.cshtml")

