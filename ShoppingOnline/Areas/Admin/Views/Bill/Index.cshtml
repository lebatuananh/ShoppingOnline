@using ShoppingOnline.WebApplication.Authorization
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Bill Management";
}

@section styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css" rel="stylesheet"/>
  
}

@section scripts{
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js"></script>
    <script src="~/app/controllers/bill/index.js" asp-append-version="true"></script>
    <script>
        var billController = new BillController();
        billController.initialize();
    </script>
}

<input type="hidden" id="hid-category-id" value="0"/>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="page-title">
        <div class="title_left">
            <h3>Bill management</h3>
        </div>

        <div class="title_right">

            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtFromDate" class="form-control" placeholder="From Date">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtToDate" class="form-control" placeholder="To date">
            </div>
            <div class="col-md-4 col-sm-3 col-xs-12 form-group">
                <input type="text" id="txtSearchKeyword" class="form-control" placeholder="Tìm kiếm...">

            </div>
            <div class="col-md-1 col-sm-2 col-xs-12 form-group">
                <button class="btn btn-default" id="btn-search" type="button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
            @if ((await AuthorizationService.AuthorizeAsync(User, "BILL", Operations.Create)).Succeeded)
            {
                <div class="col-md-1 col-sm-2 col-xs-12 form-group">
                    <button class="btn btn-success" id="btn-create" type="button">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                </div>
            }
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-product" class="table table-striped table-bordered nowrap">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Customer name</th>
                            <th>Payment method</th>
                            <th>Order date</th>
                            <th>Status</th>
                            <th>Detail</th>
                        </tr>
                        </thead>
                        <tbody id="tbl-content"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-page">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    recors/page.
                                </span>
                                Total records: <strong id="lbl-total-records"></strong>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script id="table-template" type="x-tmp-xtemplate">
        <tr>
            <td>{{Id}}</td>
            <td>{{CustomerName}}</td>
            <td>{{PaymentMethod}}</td>
            <td>{{DateCreated}}</td>
            <td>{{BillStatus}}</td>
            @if ((await AuthorizationService.AuthorizeAsync(User, "BILL", Operations.Update)).Succeeded)
            {
                <td><a href="#" data-id="{{Id}}" class="btn-view"><i class="fa fa-eye"></i></a></td>
            }

        </tr>
    </script>
</div>
@Html.Partial("_DetailModal.cshtml")