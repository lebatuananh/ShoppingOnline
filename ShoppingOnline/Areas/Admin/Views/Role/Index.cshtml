@{
    ViewData["Title"] = "Role list";
}

@section Styles{
    <link href="~/lib/jquery-treegrid/css/jquery.treegrid.css" rel="stylesheet"/>

}

@section Scripts{
    <script src="~/lib/jquery-treegrid/js/jquery.treegrid.js"></script>

}

<div class="block-header">
    <h2>List Role</h2>
</div>

<!-- Hover Rows -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    LIST ROLE
                </h2>
                <div class="row clearfix" style="margin-top: 26px; margin-bottom: -21px;">
                    <div class="col-md-4" style="float: left;">
                        <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float">
                            <i class="material-icons">add</i>
                        </button>
                    </div>
                    <div class="col-md-4" style="float: right;">
                        <div class="input-group input-group-lg pull-right">
                            <span class="input-group-addon">
                                <button type="button" class="btn btn-default waves-effect" style="margin-top: -17px;">
                                    <i class="material-icons">search</i>
                                </button>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control" placeholder="Search...">
                            </div>
                        </div>
                    </div>
                </div>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:void(0);">Action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Another action</a>
                            </li>
                            <li>
                                <a href="javascript:void(0);">Something else here</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th width="10%">#</th>
                        <th width="45%">NAME</th>
                        <th width="45%">DESCRIPTION</th>
                    </tr>
                    </thead>
                    <tbody id="tbl-content">
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>
</div>
<!-- #END# Hover Rows -->